    <script>
        $(window).load(function() {

            var options = {
                    selector: 'textarea',
                    skin: "lightgray"
                },
                $this = $(this);

            // fix tinymce bug
            if ($this.is('[required]')) {
                options.oninit = function(editor) {
                    $this.closest('form').bind('submit, invalid', function() {
                        editor.save();
                    });
                }
            }

            tinymce.init(options);
        });

    </script>

