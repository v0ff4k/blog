{% extends 'base.html.twig' %}

{% block body_id 'useredit' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block main %}

    {% if error is defined %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-9 col-sm-offset-3">
            <div class="well">

                {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.surname) }}
                {{ form_row(form.plainPassword.first) }}
                {{ form_row(form.plainPassword.second) }}

                <div class="form-group">
                    <label class="control-label"
                           for="user_edit_username">{{ 'label.username'|trans }}</label><input
                            disabled="disabled" class="form-control" id="user_edit_username"
                            value="{{ user.username }}" />
                    <label class="control-label"
                           for="user_edit_email">{{ 'label.email'|trans }}</label><input
                            disabled="disabled" class="form-control" id="user_edit_email"
                            value="{{ user.email }}" />
                </div>

                <button class="btn btn-md btn-block btn-success" type="submit">
                    <i class="fa fa-key" aria-hidden="true"></i>{{ 'action.edit'|trans }}
                </button>

                {{ form_end(form) }}
            </div>
        </div>

    </div>

{% endblock %}

{% block sidebar %}
    {{ parent() }}
{% endblock %}
